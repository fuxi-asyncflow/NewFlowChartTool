<UserControl
    x:Class="NFCT.Graph.Views.GraphPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NFCT.Graph.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:utility="clr-namespace:NFCT.Graph.Utility"
    xmlns:views="clr-namespace:NFCT.Graph.Views"
    xmlns:vm="clr-namespace:NFCT.Graph.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:DataContext="{d:DesignInstance vm:GraphPaneViewModel}"
    mc:Ignorable="d">
    <Grid Background="PowderBlue" LayoutUpdated="Graph_LayoutUpdated">
        <Grid.Resources />
        <Canvas>
            <ItemsControl ItemsSource="{Binding Nodes}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemContainerStyle>
                    <Style TargetType="ContentPresenter">
                        <Setter Property="Canvas.Left" Value="{Binding CX}" />
                        <Setter Property="Canvas.Top" Value="{Binding CY}" />
                    </Style>
                </ItemsControl.ItemContainerStyle>
                <ItemsControl.ItemTemplateSelector>
                    <utility:GraphNodesTemplateSelector>
                        <utility:GraphNodesTemplateSelector.TextNodeTemplate>
                            <DataTemplate>
                                <views:TextNode />
                            </DataTemplate>
                        </utility:GraphNodesTemplateSelector.TextNodeTemplate>
                        <utility:GraphNodesTemplateSelector.StartNodeTemplate>
                            <DataTemplate>
                                <views:StartNode />
                            </DataTemplate>
                        </utility:GraphNodesTemplateSelector.StartNodeTemplate>
                    </utility:GraphNodesTemplateSelector>
                </ItemsControl.ItemTemplateSelector>
            </ItemsControl>

            <ItemsControl ItemsSource="{Binding Connectors}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Canvas />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Path Data="{Binding Path}" Stroke="Black" />

                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Canvas>
    </Grid>
</UserControl>
