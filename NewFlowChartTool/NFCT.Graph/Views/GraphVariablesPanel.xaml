<UserControl
    x:Class="NFCT.Graph.Views.GraphVariablesPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NFCT.Graph.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:NFCT.Graph.ViewModels"
    d:DataContext="{d:DesignInstance vm:GraphVariablesPanelViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Foreground" Value="{DynamicResource ForeGroundBrush}" />
                <Setter Property="Background" Value="Transparent" />
            </Style.Setters>
        </Style>
        <Style TargetType="Button">
            <Style.Setters>
                <Setter Property="Foreground" Value="{DynamicResource ForeGroundBrush}" />
                <Setter Property="Background" Value="Transparent" />
            </Style.Setters>
        </Style>
    </UserControl.Resources>
    <Expander Header="Variables" IsExpanded="True">
        <Grid
            Width="200"
            Height="400"
            Background="#408080ff">

            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding AddVariableCommand}" Content="add" />
                    <Button Command="{Binding ModifyVariableCommand}" Content="modify" />
                </StackPanel>
                <!--  add varialbes  -->
                <StackPanel Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0">name</TextBlock>
                            <TextBox
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding TmpName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Grid.Row="1" Grid.Column="0">type</TextBlock>
                            <TextBox
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding TmpTypeName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <TextBlock Grid.Row="2" Grid.Column="0">default</TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="1" />
                            <TextBlock Grid.Row="3" Grid.Column="0">variadic</TextBlock>
                            <CheckBox
                                Grid.Row="3"
                                Grid.Column="1"
                                HorizontalAlignment="Center" />
                        </Grid>
                    </Border>
                    <StackPanel Orientation="Horizontal">
                        <Button Command="{Binding ConfirmCommand}" Content="OK" />
                        <Button Command="{Binding CancelCommand}" Content="Cancel" />
                    </StackPanel>

                </StackPanel>

                <DataGrid
                    AutoGenerateColumns="False"
                    ItemsSource="{Binding Variables}"
                    ScrollViewer.CanContentScroll="True"
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    SelectedItem="{Binding SelectedItem}">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="{DynamicResource BackGroundBrush}" />
                        </Style>
                        <Style TargetType="DataGridRowHeader">
                            <Setter Property="Background" Value="{DynamicResource BackGroundBrush}" />
                        </Style>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Foreground" Value="{DynamicResource ForeGroundBrush}" />
                            <Style.Triggers>
                                <!--<DataTrigger Binding="{Binding IsActive}" Value="{x:Null}">
                                    <Setter Property="Foreground" Value="Green" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsActive}" Value="True">
                                    <Setter Property="Foreground" Value="Red" />
                                </DataTrigger>-->
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource BackGroundBrush}" />
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Id, Mode=OneWay}" Header="Id" />
                        <DataGridTextColumn Binding="{Binding Name, Mode=OneWay}" Header="name" />
                        <DataGridTextColumn Binding="{Binding Type, Mode=OneWay}" Header="type" />
                        <DataGridTextColumn Binding="{Binding Value, Mode=OneWay}" Header="value" />
                        <DataGridTextColumn Binding="{Binding Description, Mode=OneWay}" Header="description" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

        </Grid>
    </Expander>
</UserControl>
